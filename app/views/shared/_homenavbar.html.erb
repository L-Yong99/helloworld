<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" data-controller="navbar"
  data-action="scroll@window->navbar#updateNavbar">
  <div class="container-fluid">
    <div class="d-flex nav-left">
      <a class="navbar-brand" href="/">
        <%= image_tag "logo.jpg" %>
      </a>
      <%= render "shared/searchbar" %>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <% if user_signed_in? %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
          <li class="nav-item active">
            <%= link_to "Home", "/", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Browse Itineraries", itineraries_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "My Itineraries", dashboard_itineraries_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <% if current_user.image.key.nil? %>
              <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
            <% else %>
              <%= cl_image_tag current_user.image.key, class:"avatar dropdown-toggle", id:"navbarDropdown",  data:{bs_toggle:"dropdown"} %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Setting", edit_user_path(current_user), class:"dropdown-item"%>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        </ul>
      </div>
    <% else %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
         <li class="nav-item active">
            <%= link_to "Home", "/", class: "nav-link" %>
          </li>
          <li class="nav-item">
               <%= link_to "Browse Itineraries", itineraries_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/users/sign_in">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/sign_up">Sign up</a>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
