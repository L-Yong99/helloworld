<div class="container mt-5">
  <div class="bannertitle">
    <div class="summary_header" >
      <h1><%= @itinerary.address %></h1>
      <h5><%= @itinerary.title %></h5>
      <div>
        <img src="data:image/png;base64," alt="">
        <h6><p>By <%= @itinerary.user.first_name %></p></h6>
      </div>
    </div>
    <div class="summary_img_banner">
      <img
        src="https://images.unsplash.com/photo-1574007557239-acf6863bc375?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=80"
        alt="User Trip Photo"
      />
    </div>
  </div>

    <% if @itinerary.phase == "in plan" %>
    <%= button_to "start trip", itinerary_path(@itinerary),  method: :patch, class:"summary_btn", params: {phase: 'ongoing'} %>
  <% end %>

  <% if @itinerary.phase == "ongoing" %>
    <%= button_to "view", plan_itinerary_path(@itinerary), method: :get, class:"summary_btn" %>
    <%= button_to "end", itinerary_path(@itinerary), method: :patch, class:"summary_btn", params: {phase: 'require review'}%>
  <% end %>

  <% if @itinerary.phase == "require review" %>
    <%= button_to "trip review", itinerary_path(@itinerary), method: :patch, class:"summary_btn", params: {phase: 'completed'}%>
  <% end %>

  <% if @itinerary.phase == "completed" %>
    <%= button_to "edit review", review_itinerary_path(@itinerary), method: :get, class:"summary_btn" %>
  <% end %>


